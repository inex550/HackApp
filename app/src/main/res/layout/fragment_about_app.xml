<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.profile.presentation.ui.LifeProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="О проекте" />

    <WebView
        android:id="@+id/wv_about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_about_app" />

    <ProgressBar
        android:id="@+id/progress_bar_about_app"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:progressBackgroundTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/wv_about_app"
        app:layout_constraintEnd_toEndOf="@+id/wv_about_app"
        app:layout_constraintStart_toStartOf="@+id/wv_about_app"
        app:layout_constraintTop_toTopOf="@+id/wv_about_app" />


</androidx.constraintlayout.widget.ConstraintLayout>