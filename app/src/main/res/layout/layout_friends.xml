<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/friends_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="10sp"
        android:textColor="@color/dark"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:text="@string/friends_count"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar_1_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/light_grey"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeOval"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar_2_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        tools:src="@drawable/shape_oval_gr"
        android:layout_marginStart="-8dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeOval"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar_3_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/light_grey"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeOval"/>

    <ImageView
        android:id="@+id/like_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="4dp"
        android:background="@drawable/ripple_oval"
        android:src="@drawable/ic_heart"/>

</LinearLayout>